<h1 class="center">SoftMarks</h1>

<div class="row">
	<div class="col-md-12">
		<% @topics.each do |topic| %>
			<h3><%= link_to topic.name, topic %></h3>
			<div class="table-container">
				<div class="table-row">
					<%= render topic.bookmarks %> <!-- (select * from bookmarks where topic_id = topc.id) -->
				</div>
			</div>
		<% end %>
	</div>
</div>
