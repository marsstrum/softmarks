<!DOCTYPE html>
<html>
<head>
  <title>Softmarks</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<ul class="nav nav-tabs">
		  <li><%= link_to "Home", welcome_index_path %></li>
        <% if current_user %>
		      <li><%= link_to "All SoftMarks", topics_path %></li>
        <% end %>
		  <div class="pull-right user-info">
	       <% if current_user %>
	         Hello <%=current_user.name || current_user.email %>! &nbsp; <%= link_to "Profile", edit_user_registration_path %>
           &nbsp; <%= link_to "My SoftMarks", user_topics_index_path %> &nbsp;
	         <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
	       <% else %>
	         <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %> or <%= link_to "Sign In", new_user_session_path %>
	     		<% end %>
	    </div>
		</ul>

		<% if flash[:notice] %>
         <div class="alert alert-success">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:notice] %>
         </div>
       <% elsif flash[:error] %>
         <div class="alert alert-danger">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:error] %>
         </div>
       <% elsif flash[:alert] %>
         <div class="alert alert-warning">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:alert] %>
         </div>
       <% end %>

		<%= yield %>
	</div>
</body>
</html>
