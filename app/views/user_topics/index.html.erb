<h2 class="center">My SoftMarks</h2>

<div class="row">
	<div class="col-md-12">
		<% @my_topics.each do |topic| %>
			<h3><%= link_to topic.name, topic %></h3>
			<div class="table-container">
				<div class="table-row">
					<%= render bookmarks_for_topic(@bookmarks, topic) %>
				</div>
			</div>
		<% end %>
	</div>
</div><br />

<h2 class="center">Liked SoftMarks</h2>
<div class="row">
	<div class="col-md-12">
		<% @liked_topics.each do |topic| %>
			<h3><%= link_to topic.name, topic %></h3>
			<div class="table-container">
				<div class="table-row">
					<%= render bookmarks_for_topic(@like_bookmarks, topic) %>
				</div>
			</div>
		<% end %>
	</div>
</div>